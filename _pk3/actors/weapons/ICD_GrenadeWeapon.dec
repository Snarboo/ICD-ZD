ACTOR ICD_GrenadeSpark
{
	+NOINTERACTION
	Renderstyle Translucent
	Alpha 0.80
	Scale 0.7
	States
	{
		Spawn:
			SPUF ABCD 2 Bright
		Stop
	}
}

