ACTOR ICD_GrenadeWeapon : BaseWeapon
{
	Game Doom
	Weapon.AmmoType1 "ICD_RocketAmmo"
	Weapon.AmmoUse1 1
	Weapon.UpSound "weapons/grenade/flare"
	Tag "Hand Grenades"
	Inventory.PickupMessage "$GotBFG"
	+INVENTORY.UNDROPPABLE // Doesn't make much sense to be able to drop these (Snarboo)
	States
	{
		Select:
			BFGG A 1 A_Raise
			Loop
		Deselect:
			BFGG A 1 A_Lower
			Loop
		Ready:
			BFGG A 1 A_WeaponReady
			Loop
		Fire:
			BFGG H 4
			BFGG B 4 A_PlaySound("weapons/grenade/hgren2")
			BFGG C 4
			BFGG I 4 // Eject Grenade Handle
			TNT1 A 6 // Eject Ring
			BFGG D 1 A_PlaySound("weapons/grenade/noway")
			BFGG D 1 A_FireCustomMissile("ICD_ThrownGrenade",2,0,5,-2,0,4)
			TNT1 A 0 A_TakeInventory("ICD_RocketAmmo", 1)
			BFGG E 2
			BFGG F 2
			TNT1 A 10
			BFGG G 4 A_PlaySound("weapons/grenade/flare")
			BFGG A 5 A_Refire
			Goto Ready
		AltFire:
			BFGG H 4
			BFGG B 4 A_PlaySound("weapons/grenade/hgren2")
			BFGG C 4 // Eject Grenade Handle
			BFGG I 4 // Eject Ring
			TNT1 A 10 A_FireCustomMissile("ICD_DroppedGrenade", 0, 1, 0, -12)
			TNT1 A 0 A_TakeInventory("ICD_RocketAmmo", 1)
			BFGG G 4 A_PlaySound("weapons/grenade/flare")
			BFGG A 5 A_Refire
			Goto Ready
	}
}

