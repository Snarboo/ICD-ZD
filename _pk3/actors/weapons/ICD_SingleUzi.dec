ACTOR ICD_UziMagazine : Ammo
{
	Inventory.MaxAmount 30
	Ammo.BackpackAmount 0
	Ammo.BackpackMaxAmount 30
	Inventory.Icon USMGA0
	+INVENTORY.IGNORESKILL
}